<h2> Enter a New Review</h2>
<div class='control-group'>
	<%= form_for [@movie, @review] do |f| %>
		<p>Email *</p>
		<%= f.text_field :user_email, class: 'span3 email' %><br/><br/>
		<p>Rating *</p>
		<%= f.select(:rating, options_for_select([[1.0, 1.0],[1.5, 1.5],[2.0, 2.0],[2.5, 2.5],[3.0, 3.0],[3.5, 3.5],[4.0, 4.0],[4.5, 4.5],[5.0, 5.0]]), {}, {class: 'btn'}) %><br/><br/>
		<%= f.text_area :comment, rows: 6, :class => "commenttextarea", placeholder: 'Let us know what you think...' %><br/>
		<%= f.submit "Submit", class: "btn btn-success" %>
	<% end %>
</div>